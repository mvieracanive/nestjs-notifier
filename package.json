{
  "name": "@mvieracanive/nest_notifier",
  "version": "1.0.6",
  "description": "Nest.js module for sending notifications to a group of users after the execution of an endpoint.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "nest.js",
    "node.js",
    "module",
    "mailer",
    "endpoint notifications"
  ],
  "author": "Maia Viera Ca√±ive",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/common": "^7.6.14",
    "@nestjs/core": "^7.6.14",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "prettier": "^2.2.1",
    "rxjs": "^6.6.6",
    "typescript": "^4.2.3"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "dist",
  "types": "dist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mvieracanive/nestjs-notifier.git"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.5.1"
  }
}
